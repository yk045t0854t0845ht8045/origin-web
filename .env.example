PORT=4080
# Em producao (Vercel), use seu dominio HTTPS publico:
# BASE_URL=https://seu-projeto.vercel.app
BASE_URL=http://localhost:4080
SESSION_SECRET=troque-esta-chave

# Steam OpenID
# O login OpenID funciona sem STEAM_API_KEY.
# Se quiser, pode definir STEAM_API_KEY para enriquecer consultas de perfil em rotas legadas.
STEAM_LOGIN_ENABLED=true
STEAM_API_KEY=
SITE_BOOTSTRAP_ADMIN_IDS=76561199481226329
SITE_BOOTSTRAP_ADMIN_TABLE=76561199481226329|Owner|super-admin
# SITE_BOOTSTRAP_ADMINS_JSON=[{"steamId":"76561199481226329","staffName":"Owner","staffRole":"super-admin"}]

# Google Drive
GOOGLE_DRIVE_ENABLED=true
# Com Service Account, prefira Shared Drive: informe o ID de uma pasta do Shared Drive.
# Tambem aceita URL completa da pasta (o sistema extrai o ID automaticamente).
# "root" geralmente so funciona quando o upload usa OAuth de usuario (nao Service Account pura).
GOOGLE_DRIVE_ROOT_FOLDER_ID=root
GOOGLE_DRIVE_PATH_PREFIX=Origin Launcher
# Se quiser criar direto em GOOGLE_DRIVE_ROOT_FOLDER_ID/NomeDoJogo, deixe vazio:
# GOOGLE_DRIVE_PATH_PREFIX=
GOOGLE_DRIVE_PUBLIC_LINK=false

# Opcao 1 (recomendada): caminho para o JSON da Service Account baixado no Google Cloud
# Exemplo Windows: GOOGLE_DRIVE_KEY_FILE=C:\secrets\origin-drive-service-account.json
# Exemplo relativo: GOOGLE_DRIVE_KEY_FILE=./secrets/origin-drive-service-account.json
# Em Vercel, prefira GOOGLE_SERVICE_ACCOUNT_JSON (inline) em vez de arquivo local.
# Se voce so cola link/ID de arquivo ja existente no Drive (sem upload pelo painel), pode deixar vazio.
GOOGLE_DRIVE_KEY_FILE=

# Opcao 2: JSON inline da Service Account
# Tambem aceita "base64:<json_em_base64>"
# Opcional no modo "somente link de Drive".
GOOGLE_SERVICE_ACCOUNT_JSON=

# Supabase (se vazio, tenta ler ../config/auth.json)
SUPABASE_URL=
SUPABASE_ANON_KEY=
# Opcional (recomendado para backend): bypass de RLS no servidor
SUPABASE_SERVICE_ROLE_KEY=
SITE_ADMINS_PROVIDER=auto
SITE_ADMINS_SUPABASE_SCHEMA=public
SITE_ADMINS_SUPABASE_TABLE=admin_steam_ids

# Limite upload em MB
UPLOAD_MAX_MB=20048

# YouTube downloader (opcional)
# Se o YouTube bloquear formatos em alguns videos, cole cookies JSON exportados do navegador.
# Exemplo: YOUTUBE_COOKIES_JSON=[{"domain":".youtube.com","name":"SID","value":"..."}]
YOUTUBE_COOKIES_JSON=
